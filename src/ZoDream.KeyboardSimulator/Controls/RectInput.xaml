<UserControl x:Class="ZoDream.KeyboardSimulator.Controls.RectInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.KeyboardSimulator.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <TextBox x:Name="ValueTb" MinLines="1" IsReadOnly="{Binding ElementName=root, Path=IsReadOnly}" TextChanged="ValueTb_TextChanged" KeyDown="ValueTb_KeyDown"/>
    </Grid>
</UserControl>
